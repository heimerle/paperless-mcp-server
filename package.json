{
  "name": "paperless-mcp-server",
  "version": "1.1.0",
  "description": "Model Context Protocol server for Paperless-ngx document management system",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "paperless-mcp": "./dist/index.js"
  },
  "homepage": "https://github.com/heimerle/paperless-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/heimerle/paperless-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/heimerle/paperless-mcp-server/issues"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "start:http": "MCP_TRANSPORT=http MCP_PORT=3000 node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:http": "MCP_TRANSPORT=http MCP_PORT=3000 tsx src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "paperless",
    "paperless-ngx",
    "document-management",
    "ai",
    "llm"
  ],
  "author": "Michael Weinheimer <mweinheimer@example.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18"
  }
}
